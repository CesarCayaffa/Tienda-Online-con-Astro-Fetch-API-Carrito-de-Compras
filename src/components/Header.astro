---
import HandbagSvg from "../assets/handbag.svg";
import CartSVG from "../assets/cart.svg";
import CartIndicator from "./CartIndicator.jsx";

const currentPath = Astro.url.pathname;
---

<div class="max-w-5xl mx-auto p-4 flex justify-between items-center">
  <div class="flex items-center gap-4">
    <HandbagSvg class="w-12 h-12" />
    <div class="flex flex-col">
      <span class="text-gray-600">¡Bienvenido a la</span>
      <span class="text-2xl font-bold">Tienda Online!</span>
      <p class="text-gray-600">
        ¡Compra los mejores productos al mejor precio!
      </p>
    </div>
  </div>

  {
    currentPath !== "/cart" && (
      <div class="flex justify-end gap-4">
        <a
          href="/cart"
          class="bg-black text-white font-bold py-2 px-4 rounded-lg flex items-center gap-2 hover:scale-110 transition duration-300"
        >
          <CartIndicator client:load />

          <CartSVG class="w-6 h-6 invert" />
        </a>
      </div>
    )
  }
</div>
