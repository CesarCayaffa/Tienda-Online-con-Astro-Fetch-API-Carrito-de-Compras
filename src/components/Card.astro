---
import type { Product } from "../types/Product";

import CartSVG from "../assets/cart.svg";

const { product } = Astro.props as { product: Product };
---

<article
  class="bg-white p-6 rounded-xl shadow-lg transform transition duration-300 hover:scale-105 hover:shadow-2xl flex flex-col justify-between items-center"
  itemscope
  itemtype="https://schema.org/Product"
>
  <img
    class="h-48 w-auto mx-auto rounded-md object-cover"
    src={product.image}
    alt={`Imagen del producto ${product.title}`}
    itemprop="image"
  />
  <header class="text-center w-full mt-4">
    <h3 class="text-lg font-semibold text-gray-800 truncate" itemprop="name">
      {product.title}
    </h3>
  </header>
  <div class="flex justify-between w-full items-center mt-4 text-sm text-gray-600">
    <p class="italic" itemprop="category">{product.category}</p>
    <p class="font-bold text-lg text-green-600" itemprop="price">${product.price}</p>
  </div>
  <p class="mt-2 text-yellow-500" itemprop="aggregateRating" itemscope itemtype="https://schema.org/AggregateRating">
    <meta itemprop="ratingValue" content={product.rating.rate.toString()} />
    <meta itemprop="reviewCount" content={product.rating.count.toString()} />
    {Array.from({ length: Math.round(product.rating.rate) }, () => "‚≠ê").join("")}
  </p>
  <p itemprop="reviewCount">{product.rating.count} opiniones</p>
  <p class="mt-2 text-gray-700 hidden" itemprop="description">{product.description}</p>
  <button
    class="mt-4 bg-blue-500 text-white py-2 px-4 rounded-lg flex items-center justify-center gap-2 hover:bg-blue-600 transition duration-300 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-offset-2"
  >
    <span>Agregar al carrito</span>
    <CartSVG class="w-6 h-6" />
  </button>
</article>
